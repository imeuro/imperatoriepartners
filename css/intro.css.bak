/* pushes the page to the full capacity of the viewing area */
html {height:100%;}
body {height:100%; margin:0 auto; padding:0; background:#3b1f14; width:960px}
/* prepares the background image to full capacity of the viewing area */
#introbg {position:fixed; top:0; left:0; width:100%; height:100%;}
/* places the content ontop of the background image */
#content {position:relative; z-index:1;height:100%}
.title {
background:url(/images/intro-imperatoriepartners.jpg) no-repeat top center;
position: relative;
top: 55px;
text-align: center;
width: 100%;
opacity:0.5;
}
.title a {
padding: 265px 0 0 0;
display: block;
}
span.mail {
margin-top: -140px;
line-height: 20px;
color: #BEA6A1;
font-size: 13px;
display: block;
position: relative;
text-align: center;
height: 60px;
padding-top: 90px;
}
.fpwd {
height: 20px;
width: 170px;
padding: 2px 5px;
border-radius: 27px;
box-shadow: inset 4px 4px 7px #2C1308;
background: #351B12;
color: #BEA6A1;
border: 1px solid #2E0C0C;
text-align: center;
font-size: 16px;
outline: 0;
}


/* iPad [portrait + landscape] */
@media only screen and (min-device-width: 768px) and (max-device-width: 1024px) {
	body {width:600px;}
	#introbg {display:none}
	span.mail {
	font-size: 20px;
	}
}

/* iPhone [portrait + landscape] */
@media only screen and (max-device-width: 480px) {
	body {width:480px;}
	#introbg {display:none}
	span.mail {
	font-size: 20px;
	}
}